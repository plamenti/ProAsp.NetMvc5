
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ActionName</title>
</head>
<body>
    <div>
        The controller is: @ViewBag.Controller
    </div>
    <div>
        The action is: @ViewBag.Action
    </div>
    <div>
        @Html.ActionLink("This is an outgoing URL", "Index", "Home", null, new { id = "Hello", @class = "myClass" })
    </div>
    <div>
        This is a URL:
        @Url.Action("Index", "Home", new { id="MyId"})
    </div>
</body>

</html>
